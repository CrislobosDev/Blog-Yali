    font-size: clamp(1.8rem, 4vw, 2.5rem);
    font-family: "Alegreya", serif;
    color: var(--bg-ink);
  }

  .admin-nav {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .nav-tab {
    background: transparent;
    color: var(--muted);
    border: 1px solid transparent;
    padding: 0.6rem 1.2rem;
    border-radius: 99px;
    font-weight: 500;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
    font-size: 1rem;
    box-shadow: none;
  }

  .nav-tab:hover {
    background: var(--paper-2);
    color: var(--text);
    transform: none;
  }

  .nav-tab.active {
    background: var(--accent-light);
    color: var(--accent-2);
    font-weight: 600;
  }

  .nav-tab.logout {
    margin-left: auto;
    color: #b23c3c;
  }

  .nav-tab.logout:hover {
    background: #ffeeee;
  }

  /* Auth Status Badge */
  .auth-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: var(--muted);
    background: var(--paper-2);
    padding: 0.4rem 0.8rem;
    border-radius: 99px;
    border: 1px solid rgba(0, 0, 0, 0.06);
  }

  .status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #ccc;
  }

  .auth-status[data-state="ready"] .status-dot {
    background: #2f6b4c;
    box-shadow: 0 0 0 2px rgba(47, 107, 76, 0.2);
  }

  .auth-status[data-state="expired"] .status-dot {
    background: #b23c3c;
  }

  /* Toast Notification */
  .toast {
    position: fixed;
    right: 1.5rem;
    bottom: 1.5rem;
    background: var(--paper);
    color: var(--text);
    padding: 0.9rem 1.2rem;
    border-radius: 12px;
    box-shadow: var(--shadow-lg);
    opacity: 0;
    transform: translateY(10px);
    transition:
      opacity 0.25s ease,
      transform 0.25s ease;
    z-index: 2000;
    font-weight: 500;
    max-width: 320px;
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .toast.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .toast[data-status="success"] {
    border-left: 4px solid #2f6b4c;
  }
  .toast[data-status="error"] {
    border-left: 4px solid #b23c3c;
  }

  @media (max-width: 600px) {
    .nav-tab.logout {
      margin-left: 0;
      width: 100%;
      justify-content: center;
      margin-top: 0.5rem;
      border: 1px solid rgba(178, 60, 60, 0.2);
    }

    .admin-nav {
      gap: 0.25rem;
    }

    .nav-tab {
      flex: 1;
      justify-content: center;
      padding: 0.5rem;
      font-size: 0.9rem;
    }
  }
</style> }

