---
import Layout from "../layouts/Layout.astro";
import Header from "../components/ui/Header.astro";
import Footer from "../components/ui/Footer.astro";
---

<Layout title="Administración | Yali Salvaje">
  <Header />
  <section class="page" data-auth="checking">
    <div class="container">
      <p class="kicker">Panel de administración</p>
      <h1>Gestión de contenidos</h1>
      <p class="lead">
        Desde aquí podrás subir imágenes y entradas para el blog y la galería. Este panel ya
        se conecta a Supabase para guardar archivos y datos.
      </p>

      <div class="auth-banner" data-state="checking">
        <p>Verificando sesión...</p>
      </div>

      <div class="tabs" data-tab="blog">
        <div class="tab-list" role="tablist" aria-label="Secciones de administración">
          <button class="tab" type="button" role="tab" aria-selected="true" data-tab="blog">
            Blog
          </button>
          <button class="tab" type="button" role="tab" aria-selected="false" data-tab="galeria">
            Galería
          </button>
          <button class="tab" type="button" role="tab" aria-selected="false" data-tab="perfil">
            Perfil
          </button>
        </div>

        <div class="tab-panel" role="tabpanel" data-panel="blog">
          <div class="panel-header">
            <h2>Publicar entrada</h2>
            <div class="panel-actions">
              <button type="button" class="secondary" id="blog-cancel" hidden>Cancelar edición</button>
            </div>
          </div>
          <form class="form" id="blog-form" autocomplete="off">
            <input type="hidden" name="post_id" />
            <label>
              Título
              <input type="text" name="titulo" placeholder="Título del artículo" required />
            </label>
            <label>
              Categoría
              <input type="text" name="categoria" placeholder="Ej: Biodiversidad" required />
            </label>
            <label>
              Extracto
              <textarea name="extracto" rows="3" placeholder="Resumen breve" required></textarea>
            </label>
            <label>
              Contenido
              <textarea name="contenido" rows="8" placeholder="Texto completo de la entrada" required></textarea>
            </label>
            <label>
              Imagen destacada
              <input type="file" name="imagen" accept="image/*" />
            </label>
            <div class="preview">
              <div class="preview-media">
                <img id="blog-preview-image" alt="Previsualización de imagen" />
              </div>
              <div>
                <p class="tag" id="blog-preview-category">Sin categoría</p>
                <p class="preview-title" id="blog-preview-title">Título de la entrada</p>
                <p class="preview-excerpt" id="blog-preview-excerpt">Aquí aparecerá el extracto.</p>
              </div>
            </div>
            <div class="actions">
              <button type="submit" id="blog-submit">Publicar</button>
            </div>
            <p class="note" id="blog-message"></p>
          </form>

          <div class="list" id="blog-list"></div>
        </div>

        <div class="tab-panel" role="tabpanel" hidden data-panel="galeria">
          <div class="panel-header">
            <h2>Subir imágenes a la galería</h2>
            <div class="panel-actions">
              <button type="button" class="secondary" id="gallery-cancel" hidden>Cancelar edición</button>
            </div>
          </div>
          <form class="form" id="gallery-form" autocomplete="off">
            <input type="hidden" name="image_id" />
            <label>
              Título o descripción
              <input type="text" name="titulo" placeholder="Descripción corta" required />
            </label>
            <label>
              Texto alternativo
              <input type="text" name="alt" placeholder="Texto alternativo para accesibilidad" required />
            </label>
            <label>
              Imagen
              <input type="file" name="imagen" accept="image/*" />
            </label>
            <div class="preview">
              <div class="preview-media">
                <img id="gallery-preview-image" alt="Previsualización de imagen" />
              </div>
              <div>
                <p class="preview-title" id="gallery-preview-title">Descripción de la imagen</p>
                <p class="preview-excerpt" id="gallery-preview-alt">Texto alternativo</p>
              </div>
            </div>
            <div class="actions">
              <button type="submit" id="gallery-submit">Subir imagen</button>
            </div>
            <p class="note" id="gallery-message"></p>
          </form>

          <div class="list" id="gallery-list"></div>
        </div>

        <div class="tab-panel" role="tabpanel" hidden data-panel="perfil">
          <h2>Cuenta</h2>
          <p class="note">Sesión iniciada. Puedes cerrar sesión aquí.</p>
          <button type="button" class="secondary" id="logout">Cerrar sesión</button>
        </div>
      </div>
    </div>
    <div class="toast" id="toast" role="status" aria-live="polite" aria-atomic="true"></div>
  </section>
  <Footer />
</Layout>

<script define:vars={{ supabaseUrl: import.meta.env.PUBLIC_SUPABASE_URL, supabaseAnonKey: import.meta.env.PUBLIC_SUPABASE_ANON_KEY }}>
  window.__SUPABASE__ = {
    url: supabaseUrl,
    key: supabaseAnonKey,
  };
</script>
<script type="module" src="/scripts/admin.js"></script>

<script>
  const tabs = document.querySelectorAll(".tab");
  const panels = document.querySelectorAll(".tab-panel");

  tabs.forEach((tab) => {
    tab.addEventListener("click", () => {
      const target = tab.getAttribute("data-tab");

      tabs.forEach((btn) => {
        const isActive = btn === tab;
        btn.setAttribute("aria-selected", String(isActive));
      });

      panels.forEach((panel) => {
        panel.hidden = panel.getAttribute("data-panel") !== target;
      });
    });
  });
</script>

<style>
  .page {
    padding: 7rem 0 6rem;
  }

  h1 {
    font-family: "Alegreya", serif;
    font-size: clamp(2.5rem, 4vw, 4rem);
    margin: 0 0 0.75rem;
  }

  h2 {
    font-family: "Alegreya", serif;
    font-size: 1.8rem;
    margin: 0;
  }

  h3 {
    margin: 0 0 0.4rem;
    font-size: 1.1rem;
  }

  .kicker {
    text-transform: uppercase;
    letter-spacing: 0.25rem;
    font-size: 0.8rem;
    color: var(--muted);
    margin: 0 0 0.5rem;
  }

  .lead {
    font-size: 1.1rem;
    max-width: 720px;
  }

  .auth-banner {
    margin-top: 1.5rem;
    background: var(--paper-2);
    padding: 0.9rem 1.2rem;
    border-radius: 12px;
    color: var(--muted);
  }

  .auth-banner[data-state="ready"] {
    background: rgba(47, 107, 76, 0.12);
    color: var(--bg-ink);
  }

  .tabs {
    margin-top: 2.5rem;
    background: var(--paper);
    border-radius: var(--radius);
    padding: 2rem;
    box-shadow: var(--shadow);
  }

  .tab-list {
    display: flex;
    gap: 1rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    padding-bottom: 1rem;
    margin-bottom: 2rem;
  }

  .tab {
    border: none;
    background: transparent;
    font-weight: 600;
    font-size: 1rem;
    padding: 0.5rem 1rem;
    border-radius: 999px;
    cursor: pointer;
    color: var(--muted);
  }

  .tab[aria-selected="true"] {
    background: var(--accent);
    color: white;
  }

  .panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .form {
    display: grid;
    gap: 1.2rem;
  }

  label {
    display: grid;
    gap: 0.5rem;
    font-weight: 500;
    color: var(--bg-ink);
  }

  input,
  textarea {
    padding: 0.75rem 0.9rem;
    border-radius: 12px;
    border: 1px solid rgba(0, 0, 0, 0.12);
    font-family: inherit;
    font-size: 1rem;
  }

  .actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .preview {
    display: grid;
    gap: 1rem;
    padding: 1rem;
    border-radius: 14px;
    background: var(--paper-2);
    align-items: center;
  }

  .preview-media {
    width: 100%;
    max-width: 220px;
  }

  .preview-media img {
    width: 100%;
    height: 160px;
    object-fit: cover;
    border-radius: 12px;
    background: rgba(0, 0, 0, 0.08);
  }

  .preview-media img:not([src]) {
    display: none;
  }

  .preview-title {
    font-weight: 600;
    margin: 0 0 0.25rem;
  }

  .preview-excerpt {
    margin: 0;
    color: var(--muted);
  }

  button {
    background: var(--accent);
    color: white;
    border: none;
    padding: 0.85rem 1.5rem;
    border-radius: 999px;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 18px rgba(47, 107, 76, 0.25);
  }

  .secondary {
    background: transparent;
    border: 1px solid rgba(0, 0, 0, 0.2);
    color: var(--text);
  }

  .danger {
    background: #b23c3c;
    color: white;
  }

  .note {
    margin: 0;
    font-size: 0.9rem;
    color: var(--muted);
    min-height: 1.2rem;
  }

  .note[data-status="success"] {
    color: #256c4a;
    font-weight: 600;
  }

  .note[data-status="error"] {
    color: #b23c3c;
    font-weight: 600;
  }

  .note[data-status="loading"] {
    color: #6b5d2f;
    font-weight: 600;
  }

  .toast {
    position: fixed;
    right: 1.5rem;
    bottom: 1.5rem;
    background: var(--paper);
    color: var(--text);
    padding: 0.9rem 1.2rem;
    border-radius: 12px;
    box-shadow: var(--shadow);
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.25s ease, transform 0.25s ease;
    z-index: 2000;
    max-width: 320px;
  }

  .toast.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .toast[data-status="success"] {
    border-left: 4px solid #2f6b4c;
  }

  .toast[data-status="error"] {
    border-left: 4px solid #b23c3c;
  }

  .toast[data-status="loading"] {
    border-left: 4px solid #6b5d2f;
  }

  .list {
    margin-top: 2.5rem;
    display: grid;
    gap: 1rem;
  }

  .list-card {
    display: grid;
    gap: 1rem;
    align-items: center;
    padding: 1rem 1.2rem;
    border-radius: 16px;
    background: var(--paper-2);
  }

  .list-actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .meta {
    margin: 0;
    font-size: 0.85rem;
    color: var(--muted);
  }

  .thumb img {
    width: 120px;
    height: 90px;
    object-fit: cover;
    border-radius: 10px;
  }

  @media (min-width: 700px) {
    .preview {
      grid-template-columns: auto 1fr;
    }
  }

  @media (min-width: 900px) {
    .list-card {
      grid-template-columns: auto 1fr auto;
    }
  }
</style>
