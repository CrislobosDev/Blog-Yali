<style>
  .page-content {
    padding: 2rem 0 6rem;
    min-height: 80vh;
  }

  /* Admin Header Area */
  .admin-header {
    background: var(--paper);
    padding: 2rem;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    margin-bottom: 3rem;
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .title-group {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }

  h1 {
