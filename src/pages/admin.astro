import Header from "../components/ui/Header.astro";
import Footer from "../components/ui/Footer.astro";
import BlogManager from "../components/admin/BlogManager.astro";
import GalleryManager from "../components/admin/GalleryManager.astro";
import "../styles/admin.css";
---

<Layout title="Administraci√≥n | Yali Salvaje">
  <Header />

  <main class="page-content">
    <div class="container">
      <div class="admin-header">
        <div class="title-group">
          <h1>Panel de Administraci√≥n</h1>
          <div class="auth-status" data-state="checking">
            <span class="status-dot"></span>
            <span class="status-text">Conectando...</span>
          </div>
        </div>

        <nav class="admin-nav">
          <button class="nav-tab active" data-tab="blog">
            <span class="icon">üìù</span> Blog
