---
import Layout from "../layouts/Layout.astro";
import Header from "../components/ui/Header.astro";
import Footer from "../components/ui/Footer.astro";
---

<Layout title="Login | Yali Salvaje">
  <Header />
  <section class="page">
    <div class="container login">
      <div>
        <p class="kicker">Acceso restringido</p>
        <h1>Ingresar al panel</h1>
        <p class="lead">Inicia sesión con tu cuenta de administrador para gestionar el blog y la galería.</p>
      </div>

      <form class="form" id="login-form" autocomplete="off">
        <label>
          Email
          <input type="email" name="email" placeholder="correo@dominio.com" required />
        </label>
        <label>
          Contraseña
          <input type="password" name="password" placeholder="••••••••" required />
        </label>
        <button type="submit">Ingresar</button>
        <p class="note" id="login-message"></p>
      </form>
    </div>
  </section>
  <Footer />
</Layout>

<script define:vars={{ supabaseUrl: import.meta.env.PUBLIC_SUPABASE_URL, supabaseAnonKey: import.meta.env.PUBLIC_SUPABASE_ANON_KEY }}>
  window.__SUPABASE__ = {
    url: supabaseUrl,
    key: supabaseAnonKey,
  };
</script>
<script type="module" src="/scripts/login.js"></script>

<style>
  .page {
    padding: 7rem 0 6rem;
  }

  .login {
    display: grid;
    gap: 3rem;
    align-items: start;
  }

  h1 {
    font-family: "Alegreya", serif;
    font-size: clamp(2.5rem, 4vw, 4rem);
    margin: 0 0 0.75rem;
  }

  .kicker {
    text-transform: uppercase;
    letter-spacing: 0.25rem;
    font-size: 0.8rem;
    color: var(--muted);
    margin: 0 0 0.5rem;
  }

  .lead {
    font-size: 1.1rem;
    max-width: 560px;
  }

  .form {
    background: var(--paper);
    padding: 2rem;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    display: grid;
    gap: 1.25rem;
  }

  label {
    display: grid;
    gap: 0.5rem;
    font-weight: 500;
    color: var(--bg-ink);
  }

  input {
    padding: 0.75rem 0.9rem;
    border-radius: var(--radius-md);
    border: 1px solid rgba(0, 0, 0, 0.12);
    font-family: inherit;
    font-size: 1rem;
  }

  button {
    background: var(--accent);
    color: white;
    border: none;
    padding: 0.85rem 1.5rem;
    border-radius: var(--radius-pill);
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 18px rgba(47, 107, 76, 0.25);
  }

  .note {
    margin: 0;
    font-size: 0.9rem;
    color: var(--muted);
    min-height: 1.2rem;
  }

  @media (min-width: 900px) {
    .login {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
